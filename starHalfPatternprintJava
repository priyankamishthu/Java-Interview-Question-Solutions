// code to print halfpattern in Java


class Main {
    
    public void halfPattern(int star)
    {
        int a = star;
        for(int i =0;i<=a;i++)
        {
            for(int j = 0; j<i;j++)
            {
                System.out.print("*");
                
            }
            System.out.println("");
        }
        
    }
    public static void main(String[] args) {
        Main m = new Main();
        m.halfPattern(5);
    }
}


Output
*
**
***
****
*****
